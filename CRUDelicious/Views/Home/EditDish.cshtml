
@model Dish

<a href="/" class="btn btn-lg btn-primary">Home</a>

<div>
    <form asp-controller="Home" asp-action="SubmitEdit" method="post">
        <input type="hidden" asp-for="DishId">
        <div class="form-group">
            <label asp-for="ChefName"></label>
            <input asp-for="ChefName" class="form-control">
            <span asp-validation-for="ChefName" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DishName"></label>
            <input asp-for="DishName" class="form-control">
            <span asp-validation-for="DishName" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>

            </select>
            <span asp-validation-for="Tastiness" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>


        <input type="submit" class="btn btn-lg btn-primary">
    </form>
</div>