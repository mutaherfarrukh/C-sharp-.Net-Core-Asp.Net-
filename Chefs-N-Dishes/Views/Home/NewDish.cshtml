@model Dish
<div class="container">
    <h1>Add a Dish!</h1>
    <h3><a href="/dishes">Home</a></h3>
    <br>
    <form asp-controller="Home" asp-action="SubmitDish" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" class="form-control">

        </div>

        <div class="form-group">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>

            </select>
            <span asp-validation-for="Tastiness" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ChefId"></label>
            <select asp-for="ChefId" class="form-control">
                @foreach (Chef chf in ViewBag.AllChef)
                {
                    <option value="@chf.ChefId">@chf.FirstName @chf.LastName</option>
                }
            </select>
        </div>
        <br>

        <input type="submit" class="btn btn-lg btn-success">
    </form>
</div>