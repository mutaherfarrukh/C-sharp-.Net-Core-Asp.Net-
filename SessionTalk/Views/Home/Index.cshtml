<partial name="NavBarPartial" view-data="ViewData"/>
<h1>Logged in as: @ViewBag.UserName</h1>

<p>current page: @ViewBag.CurrentPage</p>

<form asp-controller="Home" asp-action="Submit" method="post">
    <div class="form-group">
        <label>Enter your name:</label>
        <input type="text" name="name" placeholder="name here" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary btn-lg">
</form>