@model Character

<h1>Add a new fictional character!!!</h1>
<form asp-controller="Home" asp-action= "submit" method = "POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for= "FirstName" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "FirstName"></span>
    </div>

        <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for= "LastName" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "LastName"></span>
        </div>

        <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for= "Birthday" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "Birthday"></span>
    </div>

        <div class="form-group">
        <label asp-for="HomeTown"></label>
        <input asp-for= "HomeTown" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "HomeTown"></span>
    </div>

        <div class="form-group">
        <label asp-for="ImageURL"></label>
        <input asp-for= "ImageURL" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "ImageURL"></span>
    </div>

        <div class="form-group">
        <label asp-for="FaveHobby"></label>
        <input asp-for= "FaveHobby" class = "form-control w-50">
        <span class = "alert-danger" asp-validation-for= "FaveHobby"></span>
    </div>

    <input type= "submit" class = "btn btn-primary btn-lg">
</form>