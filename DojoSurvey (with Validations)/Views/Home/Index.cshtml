@model Dojo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poiret+One|Raleway" rel="stylesheet">
    <title>Dojo Survey</title>
</head>
<body>
    <div class="mainBody">
        <form asp-controller="Home" asp-action= "Submit" method="POST">
            <div class = "form-group">
            <label asp-for="Name">Your Name:</label>
            <input asp-for= "Name"name="name"><br>
            <span class= "alert-danger" asp-validation-for="Name"></span>
            </div>
            <br>

            <div class = "form-group">

            <label asp-for="DojoLocation">Dojo Location:</label>
            <input asp-for = "DojoLocation" id = "DojoLocation"><br>
            <span class= "alert-danger" asp-validation-for="DojoLocation"></span>
            @* <select id="DojoLocation" asp-for="DojoLocation">
                <option value="Chicago">Chicago</option>
                <option value="San Jose">San Jose</option>
                <option value="Bellevue">Bellevue</option>
                <option value="Dallas">Dallas</option>
            </select>  *@
            </div>
            <br>

            <div class = "form-group">
            <label asp-for="FavoriteLanguage">Favorite Language:</label>
            <input asp-for= "FavoriteLanguage" id = "FavoriteLanguage"><br>
            <span class= "alert-danger" asp-validation-for="FavoriteLanguage"></span>
            @* <select id="language" asp-for="FavoriteLanguage">
                <option value="Python">Python</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
            </select> *@
            </div>
            <br>

            <label for="comment">Comment (optional):</label>
            <textarea id="comment" name="comment"></textarea>
            <button type="submit"  class = "btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>