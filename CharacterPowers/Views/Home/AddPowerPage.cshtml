
@model Power

<div class="container">
    <a href="/" class="btn btn-lg btn-primary">Go back</a>

    <form asp-controller="Home" asp-action="SubmitPower" method="post">
        <div class="form-group">
            <label asp-for="PowerName"></label>
            <input asp-for="PowerName" class="form-control">
            <span asp-validation-for="PowerName" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PowerLevel"></label>
            <select asp-for="PowerLevel">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control">
            <span asp-validation-for="Type" class="alert-danger"></span>
        </div>

        <input type="submit" class="btn btn-lg btn-success">
    </form>
</div>