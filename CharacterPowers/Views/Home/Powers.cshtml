<div class="container">
    <div class="d-flex justify-content-evenly w-75">
        <a href="/powers/form" class="btn btn-lg btn-primary">Add a power</a>
        
        <a href="/" class="btn btn-lg btn-info">Characters page</a>
    </div>

    <table class="table table-dark table-hover">
        <tr>
            <th>Power ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Power Level</th>
            <th>Type</th>
        </tr>

        @foreach(Power pow in ViewBag.AllPowers)
        {
            <tr>
                <td>@pow.PowerId</td>
                <td>@pow.PowerName</td>
                <td>@pow.Description</td>
                <td>@pow.PowerLevel</td>
                <td>@pow.Type</td>
            </tr>
        }
    </table>
</div>